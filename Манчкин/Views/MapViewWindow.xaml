<Window x:Class="Munchkin.Views.MapViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Munchkin.Views"
        xmlns:models="clr-namespace:Munchkin.Models"
        xmlns:viewModels="clr-namespace:Munchkin.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewModels:MapViewModel}"
        Title="MapViewWindow" Height="450" Width="800">
    <Grid>
        <local:MapView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DataContext="{Binding }"/>
        <local:CardsOnHandView DataContext="{Binding CardsOnHandViewModel, Mode=OneWay}" 
                               HorizontalContentAlignment="Center" 
                               HorizontalAlignment="Stretch"
                               Margin="0,0,0,-200"
                               VerticalAlignment="Stretch"
                               VerticalContentAlignment="Stretch"/>
    </Grid>
</Window>
